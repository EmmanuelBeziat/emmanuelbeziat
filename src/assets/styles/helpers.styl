.sr-only
	border 0
	clip-path inset(50%)
	height 1px
	overflow hidden
	padding 0
	position absolute
	width 1px
	white-space nowrap

.sr-only-focusable:is(:focus, :active)
	clip-path none
	height auto
	overflow visible
	width auto
	white-space normal

// Text alignments
.text-align-left
	text-align left

.text-align-right
	text-align right

.text-align-center
	text-align center

.text-align-justify
	text-align justify

// Pulls
.pull-left
	float left
	margin-right 2em
	margin-bottom .5em

.pull-right
	float right
	margin-left 2em
	margin-bottom .5em

.shape-round
	shape-outside circle()

// Video responsive (ratio 16/9)
.video
	@supports not (aspect-ratio 16/9)
		position relative
		padding-bottom 56.25%
		margin 2rem auto
		height 0

	iframe
		width 100%
		vertical-align top
		aspect-ratio 16/9

		@supports not (aspect-ratio 16/9)
			position absolute
			top 0
			left 0
			height 100%
			border 0

.noscript
	max-width rem(480px)
	margin rem(60px) auto
	font-size rem(20px)

.iframe-codepen
	width 100%
	min-height 430px

	@media $mq-tablet
		min-height 380px
