/**
 * Pages transitions
 **/
.page-enter-active
.page-leave-active
	transition var(--transition-slow) ease

.page-enter
.page-leave-active
	opacity 0

.fade-enter-active
.fade-leave-active
	transition opacity var(--transition-slow)

.fade-enter-active
.fade-enter
.fade-leave-to
	opacity 0

.fade-enter-to
	opacity 1

/**
 * Items transitions
 */
.list-enter-to
.list-leave
	opacity 1

.list-enter
.list-leave-to
	opacity 0

.list-complete-leave-active
.list-complete-enter-active
	position absolute

/**
 * Sequential entrances
 */
.entranceFadeIn
	animation-name entranceFadeIn
	animation-duration var(--transition-slow)

@keyframes entranceFadeIn
	from
		opacity 0
		transform scale(.95)

	to
		opacity 1
		transform scale(1)

.animation-back-slide-in
	opacity 0
	transform translateY(20px) scale(.975)
	animation .765s var(--ease-back-out) .25s forwards backSlideIn

@keyframes backSlideIn
	to
		opacity 1
		transform translateY(0) scale(1)
